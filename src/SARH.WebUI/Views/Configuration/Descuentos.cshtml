@using SARH.WebUI.Models.Configuration
@model ScheduleDiscountModel
@{
    ViewData["Title"] = "Descuentos";
    ViewData["PageName"] = "Descuentos";
    ViewData["Heading"] = "<i class='subheader-icon fal fa-random'></i> Descuentos";
    ViewData["PageDescription"] = "Administración de Descuentos";
}

@section HeadBlock {

    <link rel="stylesheet" media="screen, print" href="~/css/fa-solid.css">
    <link rel="stylesheet" media="screen, print" href="~/css/fa-brands.css">
    <link rel="stylesheet" media="screen, print" href="https://www.gotbootstrap.com/themes/smartadmin/4.0.2/css/datagrid/datatables/datatables.bundle.css">
    <link rel="stylesheet" media="screen, print" href="https://www.gotbootstrap.com/themes/smartadmin/4.0.2/css/formplugins/bootstrap-datepicker/bootstrap-datepicker.css">
    <link rel="stylesheet" media="screen, print" href="https://www.gotbootstrap.com/themes/smartadmin/4.0.2/css/notifications/sweetalert2/sweetalert2.bundle.css">
}

<div class="subheader">
    <ol class="breadcrumb breadcrumb-lg breadcrumb-arrow mb-0">
        <li>
            <a href='@Url.Action("Index","Home")'>
                <i class="fal fa-home"></i>
            </a>
        </li>
        <li>
            <a href='#'>
                <i class="fal fa-random"></i>
                <span class="hidden-lg-down">Configuración de descuentos</span>
            </a>
        </li>
    </ol>
</div>


<div class="row">
    <div class="col-xl-12">
        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <h2>
                    Descuentos configurados <span class="fw-300"><i></i></span>
                </h2>


                <div class="panel-toolbar">

                    <div class="demo-h-spacing">
                        <a id="disabledrow" href="javascript:void(0);" class="btn btn-danger btn-icon waves-effect waves-themed">
                            <i class="fal fa-times-square"></i>
                        </a>
                        <a id="viewMixed" href="javascript:void(0);" class="btn btn-success btn-icon waves-effect waves-themed">
                            <i class="fal fa-pen-square"></i>
                        </a>
                        <a href="javascript:void(0);" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target=".default-example-modal-right" class="btn btn-primary btn-icon waves-effect waves-themed">
                            <i class="fal fa-plus-circle"></i>
                        </a>
                    </div>

                </div>
            </div>

            <div class="panel-container show">
                <div class="panel-content">
                    <div class="form-group row">


                        <div class="col-lg-12">
                            <form>
                                <div class="form-group">
                                    <table id="dt-basic-example" class="table table-bordered table-hover table-striped w-100">
                                        <thead class="bg-warning-200">
                                            <tr>
                                                <th>Tipo</th>
                                                <th>Descripción</th>
                                                <th>Descuento</th>
                                                <th>Habilitado</th>
                                            </tr>
                                        </thead>
                                        <tbody id="alldiscounts">
                                            @foreach (var item in Model.SchedulesDiscounts)
                                            {
                                            <tr id="@item.Id">
                                                <td>@item.TipoDescuento</td>
                                                <td>@item.Descripcion</td>
                                                <td>@item.Discount</td>
                                                <td>@item.Habilitado</td>
                                            </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

        </ Modal Crear Nuevo Descuento -->

<div class="panel-container show">
    <div class="panel-content">

        <div class="modal fade default-example-modal-right" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-dialog-right">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title h4">Crear un nuevo descuento</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true"><i class="fal fa-times"></i></span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="card mb-5">

                            <div class="card-body p-3">
                                <h5>
                                    <small class="mt-0 mb-3 text-muted">
                                        Tipo de descuento
                                    </small>
                                    <span class="badge badge-primary fw-n position-absolute pos-top pos-right mt-3 mr-3">A</span>
                                </h5>

                                <div class="form-row">
                                    <div class="col-md-12">
                                        <label class="form-label" for="selectharware">Seleccione a que aplica el descuento</label>
                                        @Html.DropDownList("catalog", (IEnumerable<SelectListItem>)ViewBag.catalog, new { id = "catalog", @class = "form-control" })
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="card mb-g">

                            <div class="card-body p-3">
                                <h5>
                                    Información del descuento
                                    <small class="mt-0 mb-3 text-muted">
                                        Ingrese la configuración del descuento.
                                    </small>
                                    <span class="badge badge-dark fw-n position-absolute pos-top pos-right mt-3 mr-3">B</span>
                                </h5>

                                <div class="form-row">
                                    <div class="col-md-6">
                                        <label class="form-label" for="dias">Dias de incidencia</label>
                                        <input class="form-control reseterror" id="dias" required="" type="number" value="0">
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label" for="descuento">Descuento en porcentaje</label>
                                        <input class="form-control reseterror" id="descuento" type="number" value="0">
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col-md-6">
                                        <label class="form-label" for="rangeinitial">Rango inicial (Minutos)</label>
                                        <input class="form-control reseterror" id="rangeinitial" required="" type="number" value="0">
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label" for="rangeend">Rango final (Minutos)</label>
                                        <input class="form-control reseterror" id="rangeend" type="number" value="0">
                                    </div>

                                </div>

                                <div class="form-row">

                                    <div class="col-md-12">
                                        <label class="form-label" for="rangeend">Combinar con</label>
                                        <hr />
                                        <ul id="combination">
                                            @foreach (var item in Model.SchedulesDiscounts.Where(d => d.TipoDescuento.Equals("Simple")))
                                            {
                                                <div class="custom-control custom-checkbox custom-control-inline">
                                                    <input type="checkbox" class="custom-control-input" id=@("defaultInline-" + @item.Id)>
                                                    <label class="custom-control-label" for=@("defaultInline-" + @item.Id)>@item.Descripcion</label>
                                                </div>
                                            }
                                        </ul>
                                    </div>
                                </div>

                            </div>

                            <div id="errorsave" class="alert border-danger bg-transparent text-secondary fade show" role="alert" style="display:none">
                                <div class="d-flex align-items-center">
                                    <div class="alert-icon">
                                        <span class="icon-stack icon-stack-md">
                                            <i class="base-7 icon-stack-3x color-danger-900"></i>
                                            <i class="fal fa-times icon-stack-1x text-white"></i>
                                        </span>
                                    </div>
                                    <div class="flex-1">
                                        <span class="h5 color-danger-900">No se puede guardar, verifique que se han ingresando todos los datos </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button id="closemodal" type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                            <button id="savenewschedule" type="button" class="btn btn-primary">Guardar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>



        <div class="modal fade" data-backdrop="static" data-keyboard="false" id="default-example-modal-center-edit" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header  bg-warning-500">
                        <h4 class="modal-title">
                            Detalle del descuento
                        </h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true"><i class="fal fa-times"></i></span>
                        </button>
                    </div>
                    <div class="modal-body">

                        <div class="form-group">

                            <table class="table table-bordered table-hover table-striped w-100">
                                <thead class="bg-warning-200">
                                    <tr>
                                        <th>Descripción</th>
                                        <th>Descuento</th>
                                    </tr>
                                </thead>
                                <tbody id="discountincluded">

                                </tbody>
                            </table>

                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>



    </div>
</div>






    @section ScriptsBlock {

        <script src="https://www.gotbootstrap.com/themes/smartadmin/4.0.2/js/datagrid/datatables/datatables.bundle.js"></script>
        <script src="https://www.gotbootstrap.com/themes/smartadmin/4.0.2/js/formplugins/bootstrap-datepicker/bootstrap-datepicker.js"></script>
        <script src="https://www.gotbootstrap.com/themes/smartadmin/4.0.2/js/notifications/sweetalert2/sweetalert2.bundle.js"></script>

        <script>


            $('#dt-basic-example tr').click(function () {

                $(this).addClass('selected').siblings().removeClass('selected');

            });

            $(document).ready(function () {

                $('#dt-basic-example').dataTable(
                    {
                        responsive: true
                    });
            });

            $('#savenewschedule').click(function () {

                var combinationId = "";

                $("#combination input[type=checkbox]:checked").each(function () {

                    var idelement = this.id;
                    if (idelement !== "") {
                        combinationId += idelement + "|";
                    }
                });

                var model = {
                    Dias: $('#dias').val(),
                    Porcentaje: $('#descuento').val(),
                    Tipo: $('#catalog').val(),
                    RangeInitial: $('#rangeinitial').val(),
                    RangeEnd: $('#rangeend').val(),
                    Combinacion: combinationId
                };

                $.ajax({
                    url: '/Configuration/SaveDiscount',
                    type: "POST",
                    data: model,
                    success: function (data, textStatus, jqXHR) {

                        Swal.fire(
                            {
                                position: "top-end",
                                type: "success",
                                title: "Actualización exitosa",
                                showConfirmButton: false,
                                timer: 1500
                            }).then((result) => {


                                window.location.href = '/Configuration/Descuentos';

                            });



                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        alert(errorThrown);
                    }
                });




            });

            $('#disabledrow').click(function () {

                var row = $('#alldiscounts tr.selected');

                if (row.length === 0) {

                    Swal.fire(
                        {
                            type: "warning",
                            title: "Validación",
                            text: "Seleccione un registro"
                        });

                    return;
                }
                var iddiscount = row[0].id;
                var swalWithBootstrapButtons = Swal.mixin(
                    {
                        customClass:
                        {
                            confirmButton: "btn btn-primary",
                            cancelButton: "btn btn-danger mr-2"
                        },
                        buttonsStyling: false
                    });
                swalWithBootstrapButtons
                    .fire(
                        {
                            title: "Confirmación",
                            text: "Deseas desactivar el descuento?",
                            type: "warning",
                            showCancelButton: true,
                            confirmButtonText: "Si",
                            cancelButtonText: "Cancelar",
                            reverseButtons: true
                        })
                    .then(function (result) {

                        if (result.value) {


                            $.ajax({
                                url: '/Configuration/DisabledDiscount',
                                type: "POST",
                                data: { id: iddiscount },
                                success: function (data, textStatus, jqXHR) {

                                    Swal.fire(
                                        {
                                            position: "top-end",
                                            type: "success",
                                            title: "Actualización exitosa",
                                            showConfirmButton: false,
                                            timer: 1500
                                        }).then((result) => {


                                            window.location.href = '/Configuration/Descuentos';

                                        });

                                },
                                error: function (jqXHR, textStatus, errorThrown) {
                                    alert(errorThrown);
                                }
                            });


                        }
                        else if (
                            // Read more about handling dismissals
                            result.dismiss === Swal.DismissReason.cancel
                        ) {
                            swalWithBootstrapButtons.fire(
                                "Cancelación",
                                "Se ha cancelado la acción",
                                "error"
                            );
                        }
                    });




            });


            $('#viewMixed').click(function () {


                var row = $('#alldiscounts tr.selected');


                if (row.length === 0) {

                    Swal.fire(
                        {
                            type: "warning",
                            title: "Validación",
                            text: "Seleccione un registro"
                        });

                    return;
                }
                var iddiscount = row[0].id;


                $.ajax({
                    url: '/Configuration/ViewDiscounts',
                    type: "POST",
                    data: { id: iddiscount },
                    success: function (data, textStatus, jqXHR) {

                        var output = $("#discountincluded");
                        output.empty();

                        for (var i = 0; i < data.length; i++) {
                            var discount = data[i];
                            output.append("<tr><td>" + discount.descripcion + "</td><td>" +
                                discount.discount + "</td></tr>");
                        }

                        $('#default-example-modal-center-edit').modal();

                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        alert(errorThrown);
                    }
                });






            });


        </script>
    }
