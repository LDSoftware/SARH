        $(document).ready(function () {
            /* init datatables */

            $('#button-addon5').click(function () {


                if ($('#inputPIN').val() === "") {

                    Swal.fire(
                        {
                            type: "warning",
                            title: "Validación",
                            text: "Debe ingresar el PIN de empleado"
